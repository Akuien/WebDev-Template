{
  "name": "server",
  "version": "0.1.0",
  "engines": {
    "node": "10.x"
  },
  "private": true,
  "description": "Template for ExpressJS API with Mongoose for Web and Mobile Engineering (DIT341)",
  "main": "./app.js",
  "scripts": {
    "start": "node ./app.js",
    "dev": "nodemon ./app.js",
    "lint": "eslint .",
    "test": "npm run newman-server",
    "test-local": "export PORT=3000 && npm run newman",
    "newman-server": "export MONGODB_URI=mongodb://localhost:27017/server_test && export PORT=3001 && npm run dropdb && run-p --race start newman-wait",
    "newman-wait": "wait-on http://localhost:${PORT:-3001}/api && npm run newman",
    "newman": "newman run ./tests/server.postman_collection.json --env-var host=http://localhost:${PORT:-3001}",
    "dropdb": "node ./tests/dropdb.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/dit341/group-00-web.git"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "connect-history-api-fallback": "^1.6.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.5.11",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "newman": "^4.5.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "wait-on": "^3.2.0"
  }
}
